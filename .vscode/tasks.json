{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "go",
            "args": [
                "build",
                "-tags",
                "dev",
                "-gcflags",
                "all=-N -l",
                "-o",
                "build/bin/launcher.exe"
            ]
        },
        {
            "type": "npm",
            "script": "dev",
            "path": "frontend/",
            "problemMatcher": [
                "$gulp-tsc"
            ],
            "label": "npm: dev - frontend",
            "detail": "watch \"npm run build\" ./src"
        },
        {
            "label": "dev",
            "command": [
                "wails"
            ],
            "args": [
                "dev"
            ],
            "type": "process",
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}
